<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ranglerz.com.mymobileshop.MainActivity"
    android:background="@drawable/blue_background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:id="@+id/arrow_right"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/image_left_arrow"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:id="@+id/arrow_left"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/image_right_arrow"/>
        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/h_scrol_view">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beard_for_sell_linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:id="@+id/for_sell_core_prime"
                    android:src="@drawable/core_prime"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:id="@+id/for_sell_samsung_galaxy_grand_neo"
                    android:src="@drawable/samsung_galaxy_grand_neo"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="350dp"
                    android:id="@+id/for_sell_grand_prime_plus"
                    android:src="@drawable/grand_prime_plus" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:id="@+id/for_sall_samsung_galaxy_j1"
                    android:src="@drawable/samsung_galaxy_j1"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:id="@+id/for_sell_samsung_galaxy_j1_ace"
                    android:src="@drawable/samsung_galaxy_j1_ace"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:id="@+id/for_sell_sg_j1_mini_prime"
                    android:src="@drawable/sg_j1_mini_prime"
                    android:layout_weight="1"/>


                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:id="@+id/for_sell_samsung_galxy_j2"
                    android:src="@drawable/samsung_galxy_j2"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:id="@+id/for_sell_samsung_galaxy_grand_prime_j2"
                    android:src="@drawable/samsung_galaxy_grand_prime_j2"
                    android:layout_weight="1"/>


                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:id="@+id/for_sell_star_2"
                    android:src="@drawable/star_2"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:id="@+id/for_sell_star_s5282"
                    android:src="@drawable/star_s5282"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:id="@+id/for_sell_samsung_galaxy_a3"
                    android:src="@drawable/sga3"
                    android:layout_weight="1"/>

            </LinearLayout>


        </HorizontalScrollView>

        <TextView
            android:text="You Have Bought All Mobiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:id="@+id/tv_all_bought"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="30dp"
            android:visibility="gone"
             />

        <TextView
            android:text="Please Select A Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_all_bought"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/textView"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_us"
        android:text="Contact Us: 00923350388888"
        android:textSize="18dp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
